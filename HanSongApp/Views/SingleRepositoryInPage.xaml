<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HanSongApp.Views.SingleRepositoryInPage"
             Title="扫码过站"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="15">
            <!-- 条码输入区域 -->
            <Frame CornerRadius="10" Padding="15" BackgroundColor="White">
                <VerticalStackLayout Spacing="15">


                    <Entry x:Name="barcodeEntry"
                           Placeholder="请扫描条码或手动输入..."
                           PlaceholderColor="#999"
                           HorizontalOptions="FillAndExpand"
                           FontSize="18"
                           BackgroundColor="#FAFAFA"
                           TextChanged="OnBarcodeTextChanged"
                           Completed="OnBarcodeCompleted"/>
                </VerticalStackLayout>
            </Frame>

            <!-- 当前站点信息 -->
            <Frame CornerRadius="10" Padding="15" BackgroundColor="White">
                <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto" RowSpacing="10">
                    <Label Grid.Row="0" Grid.Column="0" 
               Text="当前站点:" 
               FontSize="16"
               TextColor="Gray"/>
                    <Label Grid.Row="0" Grid.Column="1" 
               x:Name="stationNameLabel"
               Text="单板入库"
               FontSize="16"
               FontAttributes="Bold"/>

                </Grid>
            </Frame>

            <!-- 提交按钮 -->
            <Button x:Name="submitButton"
                    Text="提交处理"
                    Clicked="OnSubmitClicked"
                    HorizontalOptions="Fill"
                    FontSize="18"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Padding="15"
                    CornerRadius="10"
                    Margin="0,20"
                    IsEnabled="False"/>

            <!-- 历史记录 -->
            <Frame CornerRadius="10" Padding="15" BackgroundColor="White"
                   IsVisible="False">
                <VerticalStackLayout>
                    <Label Text="最近处理记录"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333"
                           Margin="0,0,0,10"/>

                    <CollectionView x:Name="historyListView" 
                                    SelectionMode="None"
                                    HeightRequest="150">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10" BackgroundColor="#FAFAFA" CornerRadius="5">
                                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                                        <Label Grid.Column="0" Grid.Row="0"
                                               Text="{Binding Barcode}"
                                               FontSize="16"
                                               FontAttributes="Bold"/>
                                        <Label Grid.Column="1" Grid.Row="0"
                                               Text="{Binding Time, StringFormat='{0:HH:mm:ss}'}"
                                               FontSize="14"
                                               TextColor="#666"/>

                                        <Label Grid.Column="0" Grid.Row="1"
                                               Text="{Binding Station}"
                                               FontSize="14"
                                               TextColor="#666"/>
                                        <Label Grid.Column="1" Grid.Row="1"
                                               Text="{Binding Status}"
                                               FontSize="14"
                                               TextColor="{Binding StatusColor}"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Button Text="查看更多历史记录"
                            Clicked="OnViewHistoryClicked"
                            BackgroundColor="Transparent"
                            TextColor="#2196F3"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>