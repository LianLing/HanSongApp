<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HanSongApp.Views.SingleRepositoryInPage"
             Title="扫码过站"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="15">

            <!-- 当前站点信息 -->
            <Frame CornerRadius="10" Padding="15"  BackgroundColor="White">
                <Grid ColumnDefinitions="Auto, Auto,Auto,Auto" RowDefinitions="Auto, Auto,Auto,Auto" RowSpacing="5">
                    <Label Grid.Row="0" Grid.Column="0" 
   Text="当前站点:" 
   FontSize="16"
   TextColor="Gray"/>
                    <Label Grid.Row="0" Grid.Column="1" 
                       x:Name="stationNameLabel"
                       Text="单板入库"
                       FontSize="16"
                       FontAttributes="Bold"/>

                    <Label Grid.Row="0" Grid.Column="2" Margin="30,0,0,0"
                           Text="过站次数:"
                           FontSize="16"
                           TextColor="Gray"
                        />
                    <Label Grid.Row="0" Grid.Column="3" Margin="15,0"
                           x:Name="passCount"
                           Text="0"
                           FontSize="16"
                           TextColor="Black"
                        />
                </Grid>
            </Frame>
            <!-- 条码输入区域 -->
            <Frame CornerRadius="10" Padding="15" BackgroundColor="White">
                <VerticalStackLayout Spacing="15">


                    <Entry x:Name="barcodeEntry"
                           Placeholder="请扫描条码或手动输入..."
                           PlaceholderColor="#999"
                           HorizontalOptions="FillAndExpand"
                           FontSize="18"
                           BackgroundColor="#FAFAFA"
                           TextChanged="OnBarcodeTextChanged"
                           Completed="OnBarcodeCompleted"/>
                </VerticalStackLayout>
            </Frame>


            <Frame IsVisible="False" x:Name="chkOutFrame" CornerRadius="10" Padding="15" HeightRequest="160">
                <Label 
                    IsVisible="False"
                    Padding="10"
                    x:Name="chkOutResult"
                    Text="NG"
                    FontSize="50"
                    TextColor="Black"
                    
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"
                    BackgroundColor="Red"
                    />
            </Frame>

            <!-- 历史记录 -->
            <Frame CornerRadius="10" Padding="15" BackgroundColor="White"
                   IsVisible="False">
                <VerticalStackLayout>
                    <Label Text="最近处理记录"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333"
                           Margin="0,0,0,10"/>

                    <CollectionView x:Name="historyListView" 
                                    SelectionMode="None"
                                    HeightRequest="150">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10" BackgroundColor="#FAFAFA" CornerRadius="5">
                                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                                        <Label Grid.Column="0" Grid.Row="0"
                                               Text="{Binding Barcode}"
                                               FontSize="16"
                                               FontAttributes="Bold"/>
                                        <Label Grid.Column="1" Grid.Row="0"
                                               Text="{Binding Time, StringFormat='{0:HH:mm:ss}'}"
                                               FontSize="14"
                                               TextColor="#666"/>

                                        <Label Grid.Column="0" Grid.Row="1"
                                               Text="{Binding Station}"
                                               FontSize="14"
                                               TextColor="#666"/>
                                        <Label Grid.Column="1" Grid.Row="1"
                                               Text="{Binding Status}"
                                               FontSize="14"
                                               TextColor="{Binding StatusColor}"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Button Text="查看更多历史记录"
                            Clicked="OnViewHistoryClicked"
                            BackgroundColor="Transparent"
                            TextColor="#2196F3"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>